{{#section 'css'}}
<style>
    :root {
        --input-padding-x: 1.5rem;
        --input-padding-y: .75rem;
    }

    #settingsPage {
        min-height: calc(100vh - (80px + 60px));
        display: flex;
        align-items: center;
        margin: 0px 0px 80px;
    }

    .form-settings .btn {
        border-color: #132c33;
        background: #132c33;
        font-size: 80%;
        border-radius: 5rem;
        letter-spacing: .1rem;
        font-weight: bold;
        float: right;
        padding: 1rem;
        transition: all 0.2s;
    }

    .form-group {
        border-radius: 2rem;
        padding: 1.5rem 0rem;
    }

    .form-group input {
        font-size: 1.25rem;
    }

    .form-check {
        padding: 1.5rem 0rem;
    }

    /* ************** SWITCH ***************/
    /* The switch - the box around the slider */
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

    /* Hide default HTML checkbox */
    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* The slider */
    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #132c33;
        -webkit-transition: .4s;
        transition: .4s;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 26px;
        width: 26px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        -webkit-transition: .4s;
        transition: .4s;
    }

    input:checked+.slider {
        background-color: #126e82;
    }

    input:focus+.slider {
        box-shadow: 0 0 1px #126e82;
    }

    input:checked+.slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
        border-radius: 50%;
    }
</style>
{{/section}}

